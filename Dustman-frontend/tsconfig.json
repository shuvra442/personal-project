{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "vitest/globals"
    ],
    "paths": {
      "@headlessui/vue": [
        "./src"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ]
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*",
    "src/**/*.vue",
    "./src/*.ext",
    "./*.ts"
    // "src/**/__tests__/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ]
}
